{
    "$id": "https://usace-cloud-compute.github.io/cc-schemas/all-samples-action.schema.json",
    "allOf": [ { "$ref": "https://usace-cloud-compute.github.io/cc-schemas/action.schema.json"}],
    "properties": {
        "name":{
            "type": "string",
            "enum": ["all-samples", "single-sample"]
        },
        "inputs":{
            "type": "array",
            "items":{
                "allOf": [{"$ref": "https://usace-cloud-compute.github.io/cc-schemas/data-source.schema.json"}]
            },
            "minItems":1,
            "contains":{
                "allOf": [{"$ref": "https://usace-cloud-compute.github.io/cc-schemas/data-source.schema.json"}],
                "properties":{
                    "name":{
                        "type": "string",
                        "enum": ["fragilitycurve"]
                    },
                    "paths":{
                        "allOf":[{"$ref": "https://usace-cloud-compute.github.io/cc-schemas/path-and-data-path.schema.json"}],
                        "required": ["default"]
                    }
                }
            }
        },        
        "outputs":{
            "type": "array",
            "items":{
                "allOf": [{"$ref": "https://usace-cloud-compute.github.io/cc-schemas/data-source.schema.json"}]
            },
            "minItems":1,
            "contains":{
                "allOf": [{"$ref": "https://usace-cloud-compute.github.io/cc-schemas/data-source.schema.json"}],
                "properties":{
                    "name":{
                        "type": "string",
                        "enum": ["failure_elevations"]
                    },
                    "paths":{
                        "allOf":[{"$ref": "https://usace-cloud-compute.github.io/cc-schemas/path-and-data-path.schema.json"}],
                        "required": ["default", "event"]
                    }
                }
            }
        },
        "attributes": {
            "allOf": [ { "$ref": "https://usace-cloud-compute.github.io/cc-schemas/payload-attributes.schema.json"}],
            "properties":{
                "seeds-format":{
                    "type":"boolean"
                },
                "elevations-format":{
                    "type":"boolean"
                }
            }
        }
    }
}